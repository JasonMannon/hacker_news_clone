<%= form_for(@comment) do |f| %>
  <div class="form-group">
    <%= f.hidden_field :upload_id, :value => "#{@upload.id.to_s}" %>
    <%= f.label "Name" %>
    <%= f.text_field :name %><br>
    <%= f.label "Comment" %>
    <%= f.text_area :comment %><br>
  </div>
  <%= f.submit(:class => 'btn btn-primary') %>
<% end %>
